{
  "type": "object",
  "patternProperties": {
    "^.+$": {
      "type": "object",
      "if": {
        "required": ["output"]
      },
      "then": "./src/main/resources/schemas/craft_recipe.json",
      "else": {
        "if": {
          "required": ["time"]
        },
        "then": "./src/main/resources/schemas/machine_recipe.json",
        "else": "https://json-schema.org/draft/2020-12/schema"
      }
    }
  }
}
