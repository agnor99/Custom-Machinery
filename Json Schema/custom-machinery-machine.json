{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alec016.github.io/Custom-Machinery/Json%20Schema/custom-machinery-machine.json",
  "type": "object",
  "$defs": {
    "machine": {
      "$schema": "./src/main/resources/schemas/machine.json"
    },
    "upgraded": {
      "$schema": "./src/main/resources/schemas/upgraded_machine.json"
    }
  }
  "patternProperties": {
    "^.+$": {
      "type": "object",
      "allOf": [
        {
          "if": {
            "required": ["name"]
          },
          "then": {
            "$ref": "#/$defs/machine"
          }
        },
        {
          "if": {
            "required": ["parent"]
          },
          "then": {
            "$ref": "#/$defs/upgraded"
          }
        }
      ]
    }
  }
}
