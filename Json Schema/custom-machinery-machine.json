{
  "type": "object",
  "patternProperties": {
    "^.+$": {
      "type": "object",
      "if": {
        "required": ["name"]
      },
      "then": "./src/main/resources/schemas/machine.json",
      "else": {
        "if": {
          "required": ["parent"]
        },
        "then": "./src/main/resources/schemas/upgraded_machine.json",
        "else": "https://json-schema.org/draft/2020-12/schema"
      }
    }
  }
}
